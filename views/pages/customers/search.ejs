<title>
    <%= title %>
</title>
<div class="container mt-5">
    <h2 class="mb-4">Customer Details</h2>

    <% if (customer) { %>
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <td>
                    <%= customer.id %>
                </td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>
                    <%= customer.firstName %>
                </td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>
                    <%= customer.lastName %>
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>
                    <%= customer.email %>
                </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                    <%= customer.address %>
                </td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>
                    <%= customer.createdAt.toISOString().split('T')[0] %>
                </td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>
                    <%= customer.updatedAt.toISOString().split('T')[0] %>
                </td>
            </tr>
        </table>
        <% } else { %>
            <p class="text-danger">
                <%= message %>
            </p>
            <% } %>

                <a href="/customers" class="btn btn-primary mt-3">Back to Customers List</a>
</div>